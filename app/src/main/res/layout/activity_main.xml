<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="345dp"
        android:layout_height="369dp">

        <TableRow
            android:id="@+id/linha_titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text="Cadastro de Paciênte"
                android:textColor="#000000"
                android:textColorLink="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_nome"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nome do Paciênte:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_leito"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Número do Leito:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_leito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_pressao"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pressão Arterial:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_pressao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_batimentos"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Batimentos Cardíacos:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_batimentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_temperatura"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Temperatura do Corpo:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2"
                android:width="200dp"
                android:background="@color/colorPrimary"
                android:onClick="EnviarDados"
                android:text="Cadastrar Paciênte"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="322dp"
        android:layout_height="134dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/imagem2" />

</LinearLayout>